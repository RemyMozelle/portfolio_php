<div class="row">
  <div class="col-xs-12 col-sm-10 col-md-10 col-lg-10 col-sm-offset-1 col-md-offset-1 col-lg-offset-1">
    <form id="contact-form" class="form" action="/" method="POST" role="form">
      <div class="form-group">
        <input type="text" id="name" class="form-control" name="name" placeholder="Nom" tabindex="1" required>
      </div>
      <div class="form-group">
        <input id="email" type="email" class="form-control" name="email" placeholder="Email" tabindex="2" required>
      </div>
      <div class="form-group">
        <input type="text" id="subject" class="form-control" name="subject" placeholder="Sujet" tabindex="3">
      </div>
      <div class="form-group">
        <textarea id="message" class="form-control" rows="5" cols="50" name="message" placeholder="Message" tabindex="4" required></textarea>
      </div>
      <div class="text-center">
        <button type="submit" class="btn btn-start-order">Envoyer</button>
      </div>
    </form>
  </div>
</div>